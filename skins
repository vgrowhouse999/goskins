<script>
  // Trivia functionality
  let currentQuestion = '';
  let currentAnswer = '';

  async function loadTrivia() {
    submitBtn.disabled = false;
    nextBtn.style.display = 'none';
    let triviaData = await generateText('Generate a Washington Redskins trivia question with its answer.');
    let [question, answer] = triviaData.split('\nAnswer: ');
    currentQuestion = question.trim();
    currentAnswer = answer.trim().toLowerCase();
    triviaQuestion.textContent = currentQuestion;
    triviaAnswer.value = '';
    triviaResult.textContent = '';
  }

  function checkAnswer() {
    submitBtn.disabled = true;
    let userAnswer = triviaAnswer.value.trim().toLowerCase();
    if (userAnswer === currentAnswer) {
      triviaResult.textContent = "Correct! Well done!";
    } else {
      triviaResult.textContent = `Sorry, that's incorrect. The correct answer is: ${currentAnswer}`;
    }
    nextBtn.style.display = 'inline-block';
  }

  function loadNextQuestion() {
    loadTrivia();
  }

  // Uniform generator functionality
  async function generateUniform() {
    let uniformPrompt = "Generate an image of a custom Washington Redskins uniform design";
    uniformImage.innerHTML = "Generating uniform...";
    let imageUrl = await generateImage(uniformPrompt);
    uniformImage.innerHTML = `<img src="${imageUrl}" alt="Custom Redskins Uniform" style="max-width: 100%;">`;
  }

  // Initial load
  loadTrivia();
</script>

