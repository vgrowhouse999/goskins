  <header style="background-color: #773141; color: #FFB612; padding: 20px; text-align: center;">
    <h1>Washington Redskins Fan Club</h1>
  </header>

  <nav style="background-color: #FFB612; padding: 10px;">
    <a href="#database" style="color: #773141; margin-right: 10px;">Team Database</a>
    <a href="#trivia" style="color: #773141; margin-right: 10px;">Trivia</a>
    <a href="#uniform" style="color: #773141; margin-right: 10px;">Uniform Generator</a>
    <a href="#more" style="color: #773141;">More</a>
  </nav>

  <main>
    <section id="database" style="margin-top: 20px;">
      <h2>Team Database</h2>
      <div id="databaseContent">[generateText('Create a brief database of key Washington Redskins information including history, notable players, and achievements.')]</div>
    </section>

    <section id="trivia" style="margin-top: 20px;">
      <h2>Redskins Trivia</h2>
      <div id="triviaQuestion"></div>
      <input id="triviaAnswer" type="text" placeholder="Your answer">
      <button id="submitBtn" onclick="checkAnswer()">Submit</button>
      <button id="nextBtn" onclick="loadNextQuestion()" style="display: none;">Next Question</button>
      <div id="triviaResult"></div>
    </section>

    <section id="uniform" style="margin-top: 20px;">
      <h2>Uniform Generator</h2>
      <button onclick="generateUniform()">Generate Custom Uniform</button>
      <div id="uniformImage" style="margin-top: 10px;"></div>
    </section>

    <section id="more" style="margin-top: 20px;">
      <h2>More Fan Features</h2>
      <ul>
        <li>Fan Forum</li>
        <li>Game Day Predictions</li>
        <li>Merchandise Store</li>
        <li>Player Meet & Greet Events</li>
      </ul>
    </section>
  </main>

  <footer style="background-color: #773141; color: #FFB612; padding: 10px; text-align: center; margin-top: 20px;">
